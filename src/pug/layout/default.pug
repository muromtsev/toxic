block variables
  - pageTitle = 'toxic'
  - keywords = 'frontend, webpack, pug, scss, js'
  - description = 'toxic hotel website'

doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    meta(name="keywords" content=keywords)
    meta(name="description" content=description)
    title=pageTitle
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
    include ../ui-kit/header-page/header-page.pug
    include ../ui-kit/footer/footer.pug
    block header
      .container
        .container__inner.container__wrapper
          +header-page({
            elementsMenu: [
                { name: 'О нас', href: '/mock-address/change-me/',},
                { name: 'Услуги', href: '/mock-address/change-me/', 'submenu': true},
                { name: 'Вакансии', href: '/mock-address/change-me/',},
                { name: 'Новости', href: '/mock-address/change-me/'},
                { name: 'Соглашения', href: '/mock-address/change-me/', 'submenu': true},
            ],
            subelementsMenu: [
                { name: 'Occultism', href: '/mock-address/change-me/'},
                { name: 'Necromancy', href: '/mock-address/change-me/'},
                { name: 'Reincarnation', href: '/mock-address/change-me/'},
            ],
            size: 'submenu',
            btnNameLogin: 'Войти',
            btnNameRegister: 'Зарегистрироваться',
        })
    block content
    block footer
