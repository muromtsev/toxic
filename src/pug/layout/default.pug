block variables
  - pageTitle = 'Toxic'
  - keywords = 'frontend, webpack, pug, scss, js'
  - description = 'Toxic hotel website'

doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    meta(name="keywords" content=keywords)
    meta(name="description" content=description)
    title=pageTitle
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
    include ../ui-kit/header-page/header-page.pug
    include ../ui-kit/footer/footer.pug
    include ../ui-kit/copyright-bar/copyright-bar.pug
    +header-page({
      hrefLogo: './landing-page.html',
      elementsMenu: [
          { name: 'О нас', href: '/mock-address/change-me/',},
          { name: 'Услуги', href: '/mock-address/change-me/', 'submenu': true},
          { name: 'Вакансии', href: '/mock-address/change-me/',},
          { name: 'Новости', href: '/mock-address/change-me/'},
          { name: 'Соглашения', href: '/mock-address/change-me/', 'submenu': true},
      ],
      subelementsMenu: [
          { name: 'Occultism', href: '/mock-address/change-me/'},
          { name: 'Necromancy', href: '/mock-address/change-me/'},
          { name: 'Reincarnation', href: '/mock-address/change-me/'},
      ],
      size: 'submenu',
      hrefLogin: './sign-in.html',
      hrefRegister: './register-in.html',
      btnNameLogin: 'Войти',
      btnNameRegister: 'Зарегистрироваться',
    })
      
    block content
              
    +footer({
      hrefLogo: './landing-page.html',
        elementsFooter: [
            {name: 'навигация', list: ['О нас', 'Новости', 'Служба поддержки', 'Услуги'], },
            {name: 'о нас', list: ['О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы'], },
            {name: 'Служба поддержки', list: ['Соглашения', 'Сообщества', 'Связь с нами'], },
        ],
        text: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»',
        subscribeTitle: 'Подписка',
        subscribeText: 'Получайте специальные предложения и новости сервиса',
    })
    +copyright-bar({text: 'Copyright © 2018 Toxin UI Kit. All rights reserved.'})