block variables
  - pageTitle = 'toxin'
  - keywords = 'frontend, webpack, pug, scss, js'
  - description = 'Toxin hotel website'

doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    meta(name="keywords" content=keywords)
    meta(name="description" content=description)
    title=pageTitle
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
  block content