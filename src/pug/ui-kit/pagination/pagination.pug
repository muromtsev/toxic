include ../material-icons/material-icons.pug

mixin pagination({ numFrom = 1, numTo = 12, numMax = '100+', text = ' вариантов аренды', links = []}={})
    ul.pagination-list
        each link, i in links
            - let { href, isActive, number } = link
            if i === links.length-1
                li.pagination-list__item
                    a.pagination-list__link(href=href) ...
            li.pagination-list__item
                a.pagination-list__link(href=href, class= isActive ? 'pagination-list__link-active' : null)=number
        li.pagination-list__item
            a.pagination-list__link-next(href='/mock-address/change-me')
                +material-icons({
                    type: 'arrow_forward',
                    color: 'dark-shade',
                    size: 'base',
                })
        li.pagination-text
            span.pagination-text__numFrom=numFrom
            span=' - '
            span.pagination-text__numTo=numTo
            span=' из '
            span.pagination-text__numMax=numMax
            span.pagination-text__description=text