mixin text-field({type='text', name, placeholder, disabled=false, readonly=false, isMasked,}={})
    - let maskedModifier = ''

    if isMasked
        - maskedModifier = 'text-field__masked',
        - placeholder = 'ДД.ММ.ГГГГ'

    input.text-field.js-text-field(
        class= `${maskedModifier}`
        type=type
        name=name
        placeholder=placeholder
        disabled=disabled
        readonly=readonly
        )