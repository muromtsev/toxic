block variables
  - pageTitle = 'UI-kit page'
  - keywords = 'frontend, webpack, pug, scss, js'
  - description = 'UI-kit elements for pages'

doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    meta(name="keywords" content=keywords)
    meta(name="description" content=description)
    title=pageTitle
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
      include ../includes/header-ui.pug      
      include ../ui-kit/index-menu/index-menu.pug 

      block content


      h3(style='padding-left: 110px; padding-top: 30px;') ui-kit
      .ui-kit
        +index_menu({
          menu: [
            {link: './color_type.html', name: 'Color & Type'},
            {link: './form-elements.html', name: 'Form Elements'},
            {link: './header_footer.html', name: 'Header & Footer'},
            {link: './cards.html',  name: 'Cards'},
          ]
        })
      h3(style='padding-left: 60px; padding-top: 30px;') toxic pages
      .toxic-pages
        +index_menu({
          menu: [
            {link: './landing-page.html', name: 'Landing page'},
            {link: './search-room.html', name: 'Search room'},
            {link: './register-in.html', name: 'Registration'},
            {link: './sign-in.html', name: 'Sign in'},
            {link: './room-details.html', name: 'Room details'},
          ],
        })
