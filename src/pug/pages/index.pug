doctype html
html(lang='en')
  include ../includes/head.pug
  body
      include ../includes/header-ui.pug
      block content
      //- include ../ui-kit/color_type/color_type.pug
      //- include ../ui-kit/header_footer/header_footer.pug
      .container.wrapper
        include ../includes/block-descr.pug
        include ../ui-kit/header-block/header-block.pug
        +block-descr('text field', 'default')
        include ../ui-kit/text-field/text-field.pug
        +text-field
        +block-descr('text field', 'hover/focus')
        +text-field('This is pretty awesome')
        +block-descr('dropdown', 'default')
        include ../ui-kit/dropdown/dropdown.pug
        +dropdown(people, 'dropdown-number-of-guests ')   
        +block-descr('masked text field', 'default')
        include ../ui-kit/date-default/date-default.pug
        +date-default
        +block-descr('date dropdown')
        include ../ui-kit/date-dropdown/date-dropdown.pug
        +date-dropdown('date-dropdown-default','ДД.ММ.ГГГГ')
        +block-descr('date dropdown')
        +date-dropdown('date-dropdown-default','19.08.2019')
        +block-descr('filter date dropdown')
        +date-dropdown('filter-date-dropdown','19 авг - 23 авг')
        +block-descr('subscription text field')
        include ../ui-kit/subscription-text-field/subscription-text-field.pug
        +subscription-text-field
        +block-descr('dropdown', 'default')
        +dropdown(room, 'dropdown-room-amenities')
        include ../ui-kit/checkbox-list/checkbox-list.pug
        +checkbox-list
        +checkbox-list
        include ../ui-kit/room-information/room-information.pug
        +room_information('mood', 'Комфорт', 'Шумопоглащающие стены')
        +room_information('location_city', 'Удобство', 'Окно в каждой из спален')
        +block-descr('checkbox buttons')
        include ../ui-kit/checkbox-buttons/checkbox-buttons.pug
        +checkbox-buttons
        +block-descr('radio-buttons')
        include ../ui-kit/radio-buttons/radio-buttons.pug
        +radio-buttons
        +block-descr('toggle')
        include ../ui-kit/toggle-button/toggle-button.pug
        +toggle-button(true)
        +toggle-button(false)
        +block-descr('like button')
        include ../ui-kit/like-button/like-button.pug
        .flex-block(style="display: flex; justify-content: flex-start; max-width: 320px; width: 100%")
          +like-button
          +like-button--Active
        +block-descr('rate button')
        include ../ui-kit/rate-button/rate-button.pug
        +rate-button
        +block-descr('rich-checkbox-button')
        include ../ui-kit/rich-checkbox-button/rich-checkbox-button.pug
        +rich-checkbox-button
        +block-descr('bullet list')
        include ../ui-kit/bullet-list/bullet-list.pug
        +bullet-list
        include ../ui-kit/range-slider/range-slider.pug
        +range-slider('range slider')        
        +header-block({title: 'buttons'})
        include ../ui-kit/button/button.pug        
        +button({className: 'btnBackground'})
        +button({className: 'btnBorder'})
        +button
        +button({
          text: 'перейти к оплате',
          arrow: true
        })
        include ../ui-kit/pagination/pagination.pug
        +pagination({
          links: [
            {href: 'mock-address/change-me', number: 1, isActive: true },
            {href: 'mock-address/change-me', number: 2 },
            {href: 'mock-address/change-me', number: 3 },
            {href: 'mock-address/change-me', number: 15 },
          ]
        })
        include ../ui-kit/comments/comments.pug
        +comments({
          avatarSrc: './src/img/avatar.png',
          avatarAlt: 'Avatar',
          userName: 'Мурад Сарафанов',
          date: '5 дней назад',
          text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
        })